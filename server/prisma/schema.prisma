datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model user {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  role  ROLE
  createdAt DateTime @default(now())
}

model feedback {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  message String
  createdAt DateTime @default(now())
  category CATEGORY
}

model feedbackAnalysis {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  dateStart DateTime
  dateEnd DateTime
  summary String
  mitigations Json
  categoryBreakdown Json?
  analyzedAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ROLE {
  ADMIN
  USER
}

enum CATEGORY {
  PERSONAL
  WORKLOAD
  TEAM
}